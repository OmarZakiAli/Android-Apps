<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/cofee"
    android:layout_height="match_parent"
    tools:context="com.example.omar.cofee.MainActivity">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"

        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
           android:layout_alignParentBottom="true"

            android:orientation="vertical"

            android:layout_marginTop="20dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="toppings"
                android:textColor="#ddfddd" />

            <CheckBox
                android:id="@+id/addchoclate"
                android:layout_width="wrap_content"
                android:onClick="checkchoclate"
                android:layout_height="wrap_content"
                android:text="Choclate"
              android:textColor="#c9cacc"
                />

            <CheckBox
                android:id="@+id/addcream"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkcream"
                android:textColor="#cffccc"
                android:text="cream" />

            <TextView
                android:id="@+id/cof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="quantity"
                android:textColor="#ffffff"
                android:textSize="23sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <Button
                    android:id="@+id/ad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="add"

                    android:text="+" />

                <TextView
                    android:id="@+id/ncof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="0"
                    android:textColor="#ffffff"

                    android:textSize="25sp" />

                <Button
                    android:id="@+id/sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:onClick="sub"
                    android:text="-" />

            </LinearLayout>


            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="order summary"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:text="waiting"
                android:textSize="20dp" />

            <Button
                android:id="@+id/order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:onClick="calc"
                android:text="order" />


        </LinearLayout>



        <EditText
            android:id="@+id/editn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getName"
            android:ems="7"
            android:shadowColor="@color/colorAccent"

            android:inputType="textPersonName"
            android:textColor="#ffffff"
            android:text="write your name"
          android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
/>
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="email"
            android:onClick="email"/>



    </RelativeLayout>




</android.support.constraint.ConstraintLayout>
