<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.omar.miwalk">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".NumClass"
            android:label="numbers"/>
        <activity android:name=".FamClass"
            android:label="family members"/>
        <activity android:name=".PhrasesClass"
            android:label="phrases"/>
        <activity android:name=".ColorClass"
            android:label="colors"></activity>
    </application>

</manifest>